								<p class="text-center text-primary fw-bold mb-2">{{ service.title }}</p>
							</div>
							<ul>
								{% for point in service.points %}
									<li class="text-white">{{ point }}</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				{% endfor %}
			</div>
